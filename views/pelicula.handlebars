
<div class="container carta pelicula">


	<h1 class="my-4">{{pelicula.Title}}
		<small class="font-italic text-muted lead">{{pelicula.Year}}</small>
	</h1>


	<div class="row">

		<div class="col-md-3">
			<img class="img-fluid border border-dark" src="{{pelicula.Poster}}" alt="" />
		</div>

		<div class="col-md-9">
			<h3 class="my-3">Plot</h3>
			<p class="ml-4">"{{pelicula.Plot}}" </p>
			<hr />
			<h3 class="my-3 text-capitalize">{{pelicula.Type}} Details</h3>
			<ul class="fa-ul">
				<li><i class="fa-li fas fa-angle-right"></i>Rated: {{pelicula.Rated}}.</li>
				<li><i class="fa-li fas fa-angle-right"></i>Released: {{pelicula.Released}}.</li>
				<li><i class="fa-li fas fa-angle-right"></i>Runtime: {{pelicula.Runtime}}.</li>
				<li><i class="fa-li fas fa-angle-right"></i>Genre/s: {{pelicula.Genre}}.</li>
				{{#if pelicula.Director}}
					<li><i class="fa-li fas fa-angle-right"></i>Production: {{pelicula.Director}}.</li>
				{{/if}}
				<li><i class="fa-li fas fa-angle-right"></i>Writer/s: {{pelicula.Writer}}.</li>
				<li><i class="fa-li fas fa-angle-right"></i>Actor/s: {{pelicula.Actors}}.</li>
				<li><i class="fa-li fas fa-angle-right"></i>Language: {{pelicula.Language}}.</li>
				<li><i class="fa-li fas fa-angle-right"></i>Country: {{pelicula.Country}}.</li>
				{{#if pelicula.Production}}
					<li><i class="fa-li fas fa-angle-right"></i>Production: {{pelicula.Production}}.</li>
				{{/if}}
				{{#if pelicula.totalSeasons}}
					<li><i class="fa-li fas fa-angle-right"></i>Seasons: {{pelicula.totalSeasons}}.</li>
				{{/if}}

				{{#if pelicula.BoxOffice}}
					<li><i class="fa-li fas fa-dollar-sign text-capitalize"></i>Box Office: {{pelicula.BoxOffice}}</li>
				{{/if}}
				{{#if pelicula.Website}}
					<li><i class="fa-li fas fa-at"></i>Website:
						<a href="{{pelicula.Website}}" class="font-weight-bold">{{pelicula.Title}}</a></li>
				{{/if}}

			</ul>
			<hr />

			<h3 class="my-3">Ratings & Awards</h3>

			<ul class="fa-ul">
				{{#each pelicula.Ratings}}
					<li><i class="fa-li far fa-star"></i>{{this.Source}}</li>
					<div class="progress w-50 border border-warning bg-danger">
						<div
							class="progress-bar progress-bar-striped bg-success coloreame"
							role="progressbar"
							style="width: {{this.Value}}%"
							aria-valuenow="62"
							aria-valuemin="0"
							aria-valuemax="100"
						>%{{this.Value}}
						</div>
					</div>
				{{/each}}
			</ul>
			<div class="row">
				<div class="col">
					<ul class="fa-ul">
						{{#if pelicula.Awards}}
							<li><i class="fa-li fas fa-award"></i>
								<p class="text-capitalize">Awards: {{pelicula.Awards}}</p>
							</li>
						{{/if}}
					</ul>
				</div>
			</div>
		</div>
	</div>
</div>